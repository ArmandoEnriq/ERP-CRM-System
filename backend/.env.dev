# ====================================
# CONFIGURACIÓN GENERAL
# ====================================
NODE_ENV=development
PORT=3000
API_PREFIX=api
 
# ====================================
# INFORMACIÓN DEL SISTEMA
# ====================================
APP_NAME=Sistema ERP/CRM
APP_VERSION=1.0.0
APP_DESCRIPTION=Sistema ERP/CRM Full-Stack desarrollado con NestJS y React
GLOBAL_PREFIX=api

# ====================================
# BASE DE DATOS Y OPTIMIZACIÓN
# ==================================== 
DATABASE_TYPE=postgres
DATABASE_HOST=database
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=erp_crm_db
DATABASE_SCHEMA=public
DATABASE_SYNC=true
DATABASE_LOGGING=true
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=300000
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DATABASE_RUN_MIGRATIONS=true
DATABASE_CACHE=false
DATABASE_CACHE_DURATION=30000


# Para producción usar connection URL
# DATABASE_URL=postgresql://username:password@host:port/database

# ====================================
# AUTENTICACIÓN Y SEGURIDAD
# ====================================
JWT_SECRET=contra_solo_usada_en_desarrollo_cambiar
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=refresh_secret_key_desarrollo_cambiar
JWT_REFRESH_EXPIRATION=30d
JWT_ISSUER=erp-crm-system
JWT_AUDIENCE=erp-crm-users

# Salt rounds for bcrypt (10-12 recommended for production) and password requirements
PASSWORD_SALT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# ====================================
# SESSION AND LOGIN ATTEMPTS
# ====================================
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=3600000
ENABLE_TWO_FACTOR=false
PASSWORD_RESET_EXPIRATION=3600000
EMAIL_VERIFICATION_EXPIRATION=86400000

# ====================================
# REDIS (para cache y queues)
# ====================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_CACHE_DB=1
CACHE_TTL=600
USER_SESSION_TTL=86400 
API_RESPONSE_TTL=300
REPORT_DATA_TTL=1800
MASTER_DATA_TTL=3600

# ====================================
# EMAIL CONFIGURATION
# ====================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_REPLY_TO=reply@yourcompany.com
EMAIL_TLS_REJECT_UNAUTHORIZED=false
EMAIL_TEMPLATES_DIR=src/templates/email
EMAIL_RATE_LIMIT_MAX=10
EMAIL_RATE_LIMIT_WINDOW=3600000
EMAIL_QUEUE_ENABLED=false
EMAIL_QUEUE_ATTEMPTS=3

# ====================================
# STORAGE Y FILE UPLOAD
# ====================================
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# AWS S3 (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_S3_REGION=

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ====================================
# CORS CONFIGURATION
# ====================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Accept,Authorization,X-Requested-With

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_FILES=10
LOG_MAX_SIZE=20m

# ====================================
# API EXTERNA - FACTURACIÓN (México)
# ====================================
SAT_API_KEY=
SAT_API_URL=

# ====================================
# WEBHOOKS Y NOTIFICACIONES
# ====================================
WEBHOOK_SECRET=your-webhook-secret
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ====================================
# MONITOREO Y ANALYTICS
# ====================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# ====================================
# DESARROLLO Y TESTING
# ====================================
SWAGGER_ENABLE=true
SWAGGER_TITLE=Sistema ERP/CRM
SWAGGER_DESCRIPTION=Documentacion del Sistema ERP/CRM Full-Stack desarrollado con NestJS y React
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# ====================================
# PGADMIN CONFIGURATION
# ====================================
PGADMIN_DEFAULT_EMAIL=admin@localhost
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_LISTEN_PORT=5050

# ====================================
# PAGE CONFIGURATION
# ====================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ====================================
# PAYPAL CONFIGURATION
# ====================================
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# ====================================
# OAUTH CONFIGURATION
# ====================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_ENABLED=false
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_OAUTH_ENABLED=false