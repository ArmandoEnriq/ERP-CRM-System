# ====================================
# CONFIGURACIÓN GENERAL
# ====================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# ====================================
# BASE DE DATOS
# ==================================== 
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=erp_crm_db
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# Para producción usar connection URL
# DATABASE_URL=postgresql://username:password@host:port/database

# ====================================
# AUTENTICACIÓN Y SEGURIDAD
# ====================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRATION=30d

# Salt rounds for bcrypt (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=10

# ====================================
# REDIS (para cache y queues)
# ====================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_DB=0

# ====================================
# EMAIL CONFIGURATION
# ====================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourcompany.com

# ====================================
# STORAGE Y FILE UPLOAD
# ====================================
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv,application/vnd.ms-excel

# AWS S3 (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_S3_REGION=

# ====================================
# RATE LIMITING
# ====================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ====================================
# CORS CONFIGURATION
# ====================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Accept,Authorization,X-Requested-With

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_FILES=10
LOG_MAX_SIZE=20m

# ====================================
# API EXTERNA - FACTURACIÓN (México)
# ====================================
SAT_API_KEY=
SAT_API_URL=

# ====================================
# WEBHOOKS Y NOTIFICACIONES
# ====================================
WEBHOOK_SECRET=your-webhook-secret
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ====================================
# MONITOREO Y ANALYTICS
# ====================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# ====================================
# DESARROLLO Y TESTING
# ====================================
SWAGGER_ENABLE=true
API_DOCS_PATH=docs
MOCK_DATA_ENABLED=true

# ====================================
# PGADMIN CONFIGURATION
# ====================================
PGADMIN_DEFAULT_EMAIL=admin@localhost
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_LISTEN_PORT=5050