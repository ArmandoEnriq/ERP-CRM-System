# .env.example
# =============
# Variables de entorno para el frontend

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# App Configuration
VITE_APP_NAME=ERP/CRM System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema ERP/CRM integral para gestión empresarial

# Environment
VITE_NODE_ENV=development

# Features Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
VITE_ENABLE_HOTJAR=false

# External Services
VITE_STRIPE_PUBLIC_KEY=
VITE_GOOGLE_MAPS_API_KEY=
VITE_CLOUDINARY_CLOUD_NAME=

# Debug
VITE_DEBUG=false
VITE_SHOW_REDUX_LOGGER=false

# =====================

# .env.development
# ================
# Variables para desarrollo

VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=30000
VITE_APP_NAME=ERP/CRM System (Dev)
VITE_NODE_ENV=development
VITE_DEBUG=true
VITE_SHOW_REDUX_LOGGER=true
VITE_ENABLE_ANALYTICS=false

# =====================

# .env.production
# ===============
# Variables para producción

VITE_API_URL=https://api.tu-dominio.com
VITE_API_TIMEOUT=15000
VITE_APP_NAME=ERP/CRM System
VITE_NODE_ENV=production
VITE_DEBUG=false
VITE_SHOW_REDUX_LOGGER=false
VITE_ENABLE_ANALYTICS=true