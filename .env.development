# =====================================================
# DEVELOPMENT ENVIRONMENT
# =====================================================

NODE_ENV=development
APP_NAME=ERP/CRM System - Development
APP_VERSION=1.0.0-dev
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# DATABASE - Development
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=erp_crm_dev_db
DB_SSL=false
DB_SYNC=true
DB_LOGGING=true
DB_DROP_SCHEMA=false
DATABASE_URL=postgresql://postgres:password@localhost:5432/erp_crm_dev_db

# REDIS - Development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_DB=0

# JWT - Development (Less secure for dev)
JWT_SECRET=dev-jwt-secret-not-for-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# SECURITY - Development (Relaxed)
CORS_ORIGIN=*
CORS_CREDENTIALS=true
BCRYPT_ROUNDS=4
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# EMAIL - Development (Console output)
MAIL_PROVIDER=console
MAIL_HOST=
MAIL_PORT=
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=
MAIL_FROM=dev@localhost

# FILE STORAGE - Development
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads/dev

# LOGGING - Development (Verbose)
LOG_LEVEL=debug
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# API RATE LIMITING - Development (Relaxed)
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=10000

# SESSION - Development
SESSION_SECRET=dev-session-secret
SESSION_MAX_AGE=86400000

# EXTERNAL INTEGRATIONS - Development
STRIPE_SECRET_KEY=sk_test_development_key
STRIPE_WEBHOOK_SECRET=whsec_development_secret
PAYPAL_CLIENT_ID=development_client_id
PAYPAL_CLIENT_SECRET=development_client_secret

# WEBHOOKS - Development
WEBHOOK_SECRET=dev-webhook-secret

# DEVELOPMENT TOOLS
DEBUG=erp-crm:*,typeorm:*
SWAGGER_ENABLED=true
API_DOCUMENTATION_PATH=/docs
HOT_RELOAD=true

# DOCKER - Development
COMPOSE_PROJECT_NAME=erp-crm-dev